<div class="d-flex flex-column align-items-center card bg-black border-0 text-white px-2 py-3">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :email, style: "display: block", class: "form-label w-50" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :password, style: "display: block", class: "form-label w-50" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :password_confirmation, style: "display: block", class: "form-label w-50" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.label :current_password, style: "display: block", class: "form-label w-50" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="mb-2 d-flex flex-column">
    <%= f.submit "Update", class: "p-1 btn btn-warning" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "p-1 btn btn-warning" %></p>

<%#= link_to "Back", :back %>
</div>
